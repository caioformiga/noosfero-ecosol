<p class='back-button' ><%= button('', _('Back to gallery'), @page.url)%></p>
<ul id='slideshow' >
  <% images = @page.images.paginate(:per_page => per_page, :page => params[:npage]) unless params[:slideshow] %>

  <% images.each do |img| -%>
    <% if img.image? -%>
      <li><%= image_tag(url_for(img.public_filename(:display)), :title => (img.abstract.blank? ? img.name : img.abstract)) %></li>
    <% end -%>
  <% end unless images.blank? -%>
</ul>
