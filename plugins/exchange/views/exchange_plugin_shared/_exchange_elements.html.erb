<h1><%= _("Exchange between %{origin} and %{target}") % {:origin => @exchange.enterprise_origin.name, :target => @exchange.enterprise_target.name} %></h1>

<h2><%= _("%{target} offers:") % {:target => @exchange.enterprise_target.name} %></h1>

<table>
  <tr>
    <th><%= _("Product") %></th>
    <th><%= _("Quantity") %></th>
  </tr>
  <% @exchange.target_elements.each do |p| %>
    <tr>
      <td><%= p.element.name %></td>
      <td><%= p.quantity %></td>
    </tr>
  <% end %>
</table>

<h2><%= _("%{origin} offers:") % {:origin => @exchange.enterprise_origin.name} %></h1>

<table>
  <tr>
    <th><%= _("Product") %></th>
    <th><%= _("Quantity") %></th>
  </tr>
  <% @exchange.origin_elements.each do |p| %>
    <tr>
      <td><%= p.element.name %></td>
      <td><%= p.quantity %></td>
    </tr>
  <% end %>
</table>

